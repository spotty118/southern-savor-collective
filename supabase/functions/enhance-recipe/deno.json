{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "files": {
      "include": ["**/*.ts"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts"]
    },
    "options": {
      "lineWidth": 100,
      "indentWidth": 2
    }
  },
  "importMap": {
    "imports": {
      "std/": "https://deno.land/std@0.168.0/",
      "zod": "https://deno.land/x/zod@v3.22.4/mod.ts"
    }
  }
}